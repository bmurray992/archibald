# Archie Environment Configuration Example
# Copy this file to .env and modify as needed

# Database Configuration
ARCHIE_DATABASE_PATH=/path/to/custom/memory.db
ARCHIE_DATABASE_BACKUP_ENABLED=true
ARCHIE_DATABASE_BACKUP_INTERVAL_HOURS=24

# API Configuration
ARCHIE_API_HOST=0.0.0.0
ARCHIE_API_PORT=8090

# Security Configuration
ARCHIE_SECRET_KEY=your-super-secret-key-here
ARCHIE_TOKEN_EXPIRY_HOURS=24
ARCHIE_MAX_FAILED_AUTH_ATTEMPTS=5
ARCHIE_LOCKDOWN_DURATION_MINUTES=15

# Memory Management
ARCHIE_AUTO_ARCHIVE_DAYS=90
ARCHIE_MAX_MEMORY_ENTRIES=100000
ARCHIE_FTS_ENABLED=true

# Personality Settings
ARCHIE_PERSONALITY_MODE=content
ARCHIE_VERBOSE_RESPONSES=true

# Logging
ARCHIE_LOG_LEVEL=INFO
ARCHIE_LOG_FILE=/path/to/archie.log
ARCHIE_AUDIT_LOG_ENABLED=true

# Performance
ARCHIE_CONNECTION_POOL_SIZE=10
ARCHIE_QUERY_TIMEOUT_SECONDS=30

# CORS for Percy integration
ARCHIE_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]